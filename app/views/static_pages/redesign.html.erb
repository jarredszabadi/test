<%= stylesheet_link_tag "onepage-scroll" %>
<%= stylesheet_link_tag "redesign" %>
<%= stylesheet_link_tag "icon-font" %>
<%= stylesheet_link_tag "grid"%>

<%= javascript_include_tag "jquery-1.9.1.min" %>
<%= javascript_include_tag "jquery.onepage-scroll" %>

<script>
	$(document).ready(function(){
		$(".main").onepage_scroll({
			pagination: true,
			sectionContainer: "section",
			responsiveFallback: 960,
			loop: true
		});
	});
</script>
<% end %>

